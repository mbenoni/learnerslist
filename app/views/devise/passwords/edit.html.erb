<% provide(:title, "Change password") %>
<div class="container">
  <div class="password-form">
    <h1>Change your password</h1>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, autofocus: true, class: "password-icon", placeholder: "New password" %>

      <%= f.password_field :password_confirmation, class: "password-confirmation-icon", placeholder: "Confirm new password" %>

      <%= f.submit "Change my password", class: "btn btn-small" %>
    <% end %>
  </div>
</div>
